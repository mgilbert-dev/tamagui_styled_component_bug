{
  "extends": "../../tsconfig",
  "compilerOptions": {
    // for jumping to things properly in vscode
    "baseUrl": "../..",
    "paths": {
      "@tamagui/*": ["packages/*/src"],
      "tamagui": ["packages/tamagui/src"],
      "@components/*": [
        "packages/site/components/*"
      ],
      "@lib/*": [
        "packages/site/lib/*"
      ],
      "@data/*": [
        "packages/site/data/*"
      ],
      "react-native": [
        "react-native-web"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": false,
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "resolveJsonModule": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "data/docs/core/use-media.msx"  ],
  "exclude": [
    "node_modules"
  ]
}
